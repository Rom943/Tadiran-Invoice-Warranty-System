{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "lib": ["es2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}