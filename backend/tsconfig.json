{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": [ // Added this line
      "node",
      "express",
      "bcrypt",
      "cookie-parser",
      "cors",
      "jsonwebtoken",
      "multer",
      "swagger-jsdoc",
      "swagger-ui-express",
      "uuid"
    ],
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],
    "noEmitOnError": false,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}